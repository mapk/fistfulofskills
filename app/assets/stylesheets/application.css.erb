 html, body { width:100%; height:100%; padding:0; margin:0; }
body { background:#f7f7f7; font-family: 'Roboto', sans-serif; min-height:100%; position:relative; font-size:14px; font-weight:300; }
.sidebar { width:200px; height:100%; position:fixed; left:0; top:0; z-index:10; background:#FFF; border-right:1px solid #efefef; }
.sidebar > span { font-size:12px; color:#DDD; padding:20px; display:block; }
.main { padding-left:200px; height:100%; position:relative; }
.logo, .logo:hover { background:transparent url('<%= asset_path("fist.png") %>') no-repeat center 0; background-size:48px auto; display:block; text-align:center; }
nav { width:100%; margin-top:40px; }
nav a { display:block; padding:15px; font-size:14px; color:#999; border-bottom:1px solid #f7f7f7; -webkit-transition:all .1s ease-in-out; -moz-transition:all .1s ease-in-out; transition:all .1s ease-in-out; }
nav a:hover { text-decoration:none; color:#000; background:#f7f7f7; }
nav a:first-child span { font-size:1.3em; font-weight:300; margin-top:40px; display:block; }
h1, h2, h4, h5, h6 { font-weight:100; }
h3 { font-weight:300; }
h1 { font-size:3em; }
p { font-size:1.2em; }
a, a:visited, a:focus, a:hover { color:#0bbed1; text-decoration:none; }

aside { position:fixed; right:2em; top:40px; width:400px; }
.detail aside h3 { border-top:none; }
aside p { font-size:14px; }

.btn-default { border:none; padding:.7em 1.2em; background:#0ACC8C; text-shadow:none; color:#FFF !important; }
.btn-default:hover { background:#0dc186; color:#FFF; }
.btn-lg { font-size:1.5em; }

.feature { width:100%; height:100%; text-align:center; color:#FFF; padding:60px 20px 0 0;
	background: #00c2d3; /* Old browsers */
	background: -moz-linear-gradient(-45deg, #00c2d3 0%, #0095bf 80%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,#00c2d3), color-stop(80%,#0095bf)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(-45deg, #00c2d3 0%,#0095bf 80%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(-45deg, #00c2d3 0%,#0095bf 80%); /* Opera 11.10+ */
	background: -ms-linear-gradient(-45deg, #00c2d3 0%,#0095bf 80%); /* IE10+ */
	background: linear-gradient(135deg, #00c2d3 0%,#0095bf 80%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00c2d3', endColorstr='#0095bf',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */ }
.feature h2 { font-family: 'Waiting for the Sunrise', cursive; }
.feature-buttons { margin-top:8em; }

.content { padding:0 40px; width:60%; }
.detail h3 { border-top:1px solid #efefef; padding-top:20px; }

.right { float:right; }
.left { float:left; }
.bright { background:#0bbed1; color:#FFF; padding:10px !important; }

input[type="text"],
input[type="password"],
input[type="email"],
input[type="number"],
textarea,
select {
	border:none;
	padding: 7px 5px;
	outline: none;
	font-weight:normal;
	font-size:14px;
	margin: 0 0 20px;
	width: 100%;
	max-width: 100%;
	display: block;
	float:none;
	background:#FFF;
	color:#777;
}
textarea { height:140px; }
input.error, textarea.error { border:1px solid red; }
label.error { color:red; }

form.standard h3 { margin:2em 0 0; padding:20px 0; border-top:1px solid #efefef; }
.form-group span { float:right; color:#777; margin-right:10px; font-style:italic; }

.joblist { list-style:none; margin:0; padding:0; }
.joblist li { display:block; width:100%; padding:15px 0 20px; border-bottom:1px solid #efefef; }
.shorten { width:100%; height:50px; overflow:hidden; text-overflow:ellipsis; }

.list a { display:block; padding:10px 0 15px; width:100%; border-bottom:1px solid #efefef; border-radius:2px; position:relative; 
	-webkit-transition:border-left .2s ease-in-out;
	-moz-transition:border-left .2s ease-in-out;
	transition:border-left .2s ease-in-out;
}
.list a h3 { color:#555; }
.list a p { color:#858585; }
.list a i { font-size:48px; color:#efefef; position:absolute; top:32px; right:0; }
.list a:hover { margin-left:-40px; text-indent:37px; border-left:3px solid #0bbed1; }
.list a:hover h3, .list a:hover p { color:#000; }
.list a:hover i { right:-40px; color:#eaeaea; }








